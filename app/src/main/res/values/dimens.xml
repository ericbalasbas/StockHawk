<resources>
    <dimen name="activity_horizontal_margin">16dp</dimen>

    <!-- Widget -->
    <dimen name="widget_default_width">200dp</dimen>
    <dimen name="widget_default_height">40dp</dimen>
    <dimen name="widget_min_resize_width">40dp</dimen>
    <dimen name="widget_min_resize_height">@dimen/widget_default_height</dimen>
    <dimen name="widget_large_width">220dp</dimen>
    <dimen name="widget_margin">0dp</dimen> <!-- 8dp for SDK 13 or less  -->

    <!-- Text Sizes - We are using DP here rather than SP because these are already large
         font sizes, and going larger will cause lots of view problems. -->
    <dimen name="widget_text_size">24dp</dimen>

    <!-- This is an odd width, but we're trying to match the font closely to keep things working
         on devices that don't yet have Roboto -->
    <dimen name="widget_text_width">38dp</dimen>

</resources>
